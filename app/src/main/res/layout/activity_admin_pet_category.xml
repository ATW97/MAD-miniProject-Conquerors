<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminPetCategory">


    <TextView
        android:id="@+id/txtPetCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Select Pet Type"
        android:textAlignment="center"
        android:textColor="#F12C2C"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linear1_pet_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtPetCategory"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp">



        <ImageView
            android:id="@+id/img_dog"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/dog" />



        <ImageView
            android:id="@+id/img_cat"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/cat"
            />

        <ImageView
            android:id="@+id/img_bird"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/bird3" />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2_pet_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1_pet_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp"
        >
        <ImageView
            android:id="@+id/img_fish"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/fish3" />

        <ImageView
            android:id="@+id/img_other"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/other" />

    </LinearLayout>


</RelativeLayout>